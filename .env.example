# 製薬株価分析システム 環境変数設定

# データベース
PHARMA_STOCK_DATABASE_URL=sqlite:///data/pharma_stock.db

# パス設定
PHARMA_STOCK_DATA_DIR=data
PHARMA_STOCK_RAW_DATA_DIR=data/raw
PHARMA_STOCK_PROCESSED_DATA_DIR=data/processed
PHARMA_STOCK_MODELS_DIR=data/models

# API設定
PHARMA_STOCK_REQUEST_TIMEOUT=30
PHARMA_STOCK_REQUEST_RETRY_COUNT=3

# 予測設定
PHARMA_STOCK_DEFAULT_MODEL=ensemble
PHARMA_STOCK_PREDICTION_HORIZON_DAYS=5

# ロギング
PHARMA_STOCK_LOG_LEVEL=INFO
PHARMA_STOCK_LOG_FORMAT=json
